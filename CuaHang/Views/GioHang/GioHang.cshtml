@using CuaHang.Models
@model List<GioHang>
@{
    DBContext db = new DBContext();
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutGioHang.cshtml";

}
<div class="fs_menu_overlay"></div>
<div class="container single_product_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <h2 style="text-align:center">THONG TIN GIO HANG</h2>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-lg-5">
            <div class="product_details">
                <table align="center" border="1">
                    <tr style="text-align:center; font-weight:bold">
                        <td>Ma SP</td>
                        <td>Ten San Pham</td>
                        <td>Anh SP</td>
                        <td>So Luong</td>
                        <td>Don Gia</td>
                        <td>Thanh Tien</td>
                        <td></td>
                        <td></td>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr style="text-align:center; font-weight:bold">
                            <td> @item.iMaSP</td>
                            <td>@item.sTenSP</td>
                            <td><img style="width:200px; height:250px" src="@item.dAnh" /></td>
                            <td>@item.iSoluong</td>
                            <td>$@String.Format("{0:0,0}", item.dDongia) </td>
                            <td>$@String.Format("{0:0,0}", item.dThanhTien) </td>
                            <td><a href="@Url.Action("ChiTiet","Home", new {id = item.iMaSP})">Chi Tiet</a></td>
                            <td>@Html.ActionLink("Xoa", "xoaGioHang", new { @iMaSp = item.iMaSP })</td>
                            <td><input type="submit" value="Cap Nhat" /></td>

                        </tr>
                    }
                    <tr style="font-weight:bold; text-align:right;color:red">
                        <td colspan="4">So Luong: @ViewBag.TongSoLuong</td>
                        <td colspan="5">Tong Tien: @String.Format("{0:0,0}", ViewBag.TongTien) $</td>
                    </tr>
                    <tr style="font-weight:bold; color:blue;text-align:center">
                        <td colspan="9"> @Html.ActionLink("Xoa Gio Hang", "XoatatcaGioHang")</td>
                    </tr>
                    <tr style="font-weight:bold; color:blue;text-align:center">
                        <td colspan="9"> @Html.ActionLink("Dat Hang", "DatHang", "GioHang")</td>
                    </tr>
                    <tr style="font-weight:bold; color:blue;text-align:center">
                        <td colspan="9"> @Html.ActionLink("Tiep Tuc Mua Hang", "Index", "Home")</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
