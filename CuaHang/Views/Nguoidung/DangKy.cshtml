@using CuaHang.Models
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div style="margin: 15%; "></div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Đăng Ký Tài Khoản</h3>
                </div>
                <div class="panel-body">
                    <form role="form" method="post">
                        <table align="center">
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true)
                                <tr style="height: 40px">
                                    <td>Họ Tên Khách Hàng</td>
                                    <td>
                                        @Html.TextBox("HoTenKH")
                                        @ViewData["Loi1"]
                                    </td>
                                </tr>
                                <tr style="height: 40px">
                                    <td>Tên Đăng Nhập</td>
                                    <td>
                                        @Html.TextBox("TenDN")
                                        @ViewData["Loi2"]
                                    </td>
                                </tr>
                                <tr style="height: 40px">
                                    <td>Mật Khẩu</td>
                                    <td>
                                        @Html.Password("Matkhau")
                                        @ViewData["Loi3"]
                                    </td>
                                </tr>
                                <tr style="height: 40px">
                                    <td>Nhập Mật Khẩu Lại</td>
                                    <td>
                                        @Html.Password("Matkhaunhaplai")
                                        @ViewData["Loi4"]
                                    </td>
                                </tr>
                                <tr style="height: 40px">
                                    <td>Dia Chi</td>
                                    <td>
                                        @Html.TextBox("DiaChi")
                                        @ViewData["Loi5"]
                                    </td>
                                </tr>
                                <tr style="height: 40px">
                                    <td>Email</td>
                                    <td>
                                        @Html.TextBox("Email")
                                        @ViewData["Loi6"]
                                    </td>
                                </tr>
                                <tr style="height: 40px">
                                    <td>Số Điện Thoại</td>
                                    <td>
                                        @Html.TextBox("DienThoai")
                                        @ViewData["Loi7"]
                                    </td>
                                </tr>
                                <tr style="height: 40px">
                                    <td>Ngay Sinh</td>
                                    <td>
                                        <input type="date" name="Ngaysinh" />
                                        @ViewData["Loi8"]
                                    </td>
                                </tr>
                                <tr style="height: 40px">
                                    <td></td>
                                    <td>
                                        <input type="submit" value="Đăng Ký" />
                                    </td>
                                </tr>
                            }
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

