@model CuaHang.Models.AccountModel
@{
        Layout = null;
    }

    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Đăng nhập</title>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/js/jquery-3.2.1.min.js"></script>

    </head>
    <body>
        <div style="margin: 15%; "></div>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Nhập Tài Khoản</h3>
                        </div>
                        <div class="panel-body">
                            <form role="form" method="post">
                                <fieldset>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Username" name="tenDangNhap" type="text" value="@ViewBag.tenDangNhap" autofocus>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Password" name="matKhau" type="password" value="">
                                    </div>
                                    <p style="color:red">@ViewBag.error</p>
                                    <button class="btn btn-success btn-sm">Đăng Nhập</button>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </body>
    </html>



